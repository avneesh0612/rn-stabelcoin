{
  "expo": {
    "name": "react-native-stablecoin-app",
    "slug": "react-native-stablecoin-app",
    "scheme": "react-native-stablecoin-app",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*",
      "assets/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dynamicinfra.ReactNativeStablecoinApp",
      "buildNumber": "3",
      "associatedDomains": [
        "applinks:yourdomain.com",
        "applinks:yourdomain.com"
      ],
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "ReactNativeStablecoinApp"
            ]
          },
          {
            "CFBundleURLSchemes": [
              "ReactNativeStablecoinApp"
            ]
          }
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.dynamicinfra.ReactNativeStablecoinApp",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "yourdomain.com"
            },
            {
              "scheme": "ReactNativeStablecoinApp"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./src/assets/images/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "5a3dd677-af09-4299-b354-ea01a2eca9c1"
      }
    },
    "plugins": [
      "expo-secure-store"
    ],
    "newArchEnabled": true
  }
}
